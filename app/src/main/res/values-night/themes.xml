<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.shyf" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prim2</item>
        <item name="colorPrimaryVariant">@color/prim2</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/prim2</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Light Mode  -->
    <!-- Screen background if Dark mode -->
    <style name="SCREEN">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXTSECAND">
        <item name="android:textColor">@color/txt_color</item>
    </style>

    <style name="SHEETSTYLE">
        <item name="android:background">@drawable/dialog_profile_dark</item>
    </style>

</resources>