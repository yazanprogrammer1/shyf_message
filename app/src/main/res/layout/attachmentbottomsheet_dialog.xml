<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/SHEETSTYLE"
        >

        <View
            android:id="@+id/attachmentpopup_topbar"
            android:layout_width="25dp"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/prim2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/yes_btn"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/attachmentpopup_topbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:columnCount="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/attachmentpopup_cv_doc"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardElevation="0dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#9D00FF"
                    app:cardCornerRadius="7dp"
                    android:padding="1dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_document_0"
                        app:tint="@color/white"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TEXT"
                    android:text="Document"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/attachmentpopup_cv_camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardElevation="0dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#FF0084"
                    app:cardCornerRadius="7dp"
                    android:padding="1dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_camera_1"
                        app:tint="@color/white"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TEXT"
                    android:text="Camera"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/attachmentpopup_cv_gallery"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardElevation="0dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#E600FF"
                    app:cardCornerRadius="7dp"
                    android:padding="1dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_gallery_1"
                        app:tint="@color/white"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TEXT"
                    android:text="Gallery"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/attachmentpopup_cv_audio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardElevation="0dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#FF5900"
                    app:cardCornerRadius="7dp"
                    android:padding="1dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_headphone_0"
                        app:tint="@color/white"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TEXT"
                    android:text="Audio"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/attachmentpopup_cv_location"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardElevation="0dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#00A308"
                    app:cardCornerRadius="7dp"
                    android:padding="1dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_location_0"
                        app:tint="@color/white"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TEXT"
                    android:text="Location"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/attachmentpopup_cv_contact"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardElevation="0dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#0073FF"
                    app:cardCornerRadius="7dp"
                    android:padding="1dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_contact_1"
                        app:tint="@color/white"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TEXT"
                    android:text="Contact"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>